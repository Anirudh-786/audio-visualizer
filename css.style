body {
  margin: 0;
  min-height: 100vh;
  background: #020617;
  color: white;
  font-family: Arial, sans-serif;
  text-align: center;
}

button {
  padding: 12px 24px;
  font-size: 16px;
  margin: 12px;
  cursor: pointer;
  border-radius: 6px;
  border: none;
  background: #2563eb;
  color: white;
}

canvas {
  display: block;
  margin: 20px auto;
}
